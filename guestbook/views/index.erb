<div style="margin-top: 120px; margin-bottom: 80px;" class="container">

<header class="jumbotron my-4">
    <h3 class="display-3">Sign our Guestbook</h3> </br>

  <form accept-charset="UTF-8" action="/function/guestbook/sign" method="post">
    <div class="form-group">
      <label for="first-name">First Name</label>
      <input type="text" name="first-name" class="form-control" id="first-name" placeholder="First Name">
    </div>
    <div class="form-group">
      <label for="last-name">Last  Name</label>
      <input type="text" class="form-control" id="last-name" name="last-name" placeholder="Last Name">
    </div>
    <button type="submit" class="btn btn-primary">Sign</button>
  </form>

</header>

  <div class="jumbotron my-4">

      <% if visitors.length > 0 %>
          <h4 class="card-title">Our visitors include:</h4>
          
          <ul>
            <% visitors.each do |visitor| %>
              <li><%= visitor.name %></li>
            <% end %>
          </ul>
      <% end %>

  </div>

</div>
